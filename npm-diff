#!/usr/bin/env bash -e

# arguments

if [[ $# != 3 ]]; then
  echo "Usage: npm-diff <module> <versionA> <versionB>"
  exit
fi

module=$1
a=$2
b=$3

# work dir

work=/tmp/$RANDOM
mkdir $work
cd $work

# download

registry=`npm config get registry`

download(){
  mkdir $1
  cd $1
  curl --fail --silent $registry$module/-/$module-$1.tgz | tar -xz --strip 1
  if [[ ${PIPESTATUS[0]} != 0 ]]; then
    echo "Unknown version: $module@$1"
    exit 1
  fi
}

download $a &
download $b &

for job in `jobs -p`; do wait $job || exit 1; done

# diff

diff \
  --recursive \
  --unified \
  --exclude test \
  --exclude Makefile \
  $a $b \
  | egrep -v "\"readme\"|\"_id\"|\"_from\"|\"_resolved\""

# cleanup

rm -Rf $work

